

% make a waveform for the localizer experiment

%lower number stimulators are proximal, first set (ch 1 + 2) on left arm,
%second set (ch 3 and 4) on right arm.

%1: proximal left
%2: distal left
%3: proximal right
%4: distal right

function [stim] = stimCreateBlock2On(stimFreq, varargin)

onTime = 0.45;
offTime = 0.1;

sampleRate = 8192;

onWave = sin(stimFreq * ((1:2*pi/(sampleRate - 1): onTime*2*pi)));
offWave = zeros(1, floor(offTime*sampleRate));

stimWave = [onWave offWave onWave];

arrayLength = length(stimWave);

stimArray = zeros(4, arrayLength);

%Stimulus sequence

% 1 & 2
% 2 & 3
% 3 & 4
% 4 & 1

stim.cond1 = stimArray;
stim.cond2 = stimArray;
stim.cond3 = stimArray;
stim.cond4 = stimArray;

%stimulus sine wave

onLength = length(stimWave);


if reverse == 0
%cycle 1
stim.cond1(1, :) = stimWave;
    
%cycle 2
stim.cond2(2, :) = stimWave;

%cycle 3
stim.cond3(3, :) = stimWave;

%cycle 4
stim.cond4(4, :) = stimWave;
end

if reverse == 1
%cycle 1
stim.cond1(1, :) = stimWave;
    
%cycle 2
stim.cond2(2, :) = stimWave;

%cycle 3
stim.cond3(3, :) = stimWave;

%cycle 4
stim.cond4(4, :) = stimWave;

end

end
